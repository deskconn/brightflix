{
  "name": "Brightflix",
  "version": "1.0",
  "description": "Increases laptop's brightness when netflix.com goes fullscreen",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "autobahn.min.js",
      "background.js"
    ],
    "persistent": true
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/icon128.png",
    "default_popup": "popup.html",
    "default_title": "Save that link!"
  },
  "manifest_version": 2
}
